<html>

<head>
    <title>
        <%=title%>
    </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="css/home.css">
</head>

<body>

    <!-- this is navbar -->

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>



    <!-- form for contact list -->

    <form action="/create-contact" method="POST">
        <div class="mb-3 d-flex align-items-center justify-content-center align-items-center flex-column">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input type="text" class="form-control" name="name">

        </div>
        <div class="mb-3 d-flex align-items-center justify-content-center flex-column">
            <label for="exampleInputPassword1" class="form-label">Number</label>
            <input type="number" class="form-control" name="number">
        </div>

        <button type="submit" class="btn btn-primary">Add Contact</button>
    </form>

    <!-- rendering details what we inputed  -->

    <% for(let i of contact_list){ %>
        <div class="card">
            <h5 class="card-header">
                <%=i.name %>
            </h5>
            <div class="card-body">
                <h5 class="card-title">
                    <%= i.number %>
                </h5>
                <!-- here we pass whatever after '/delete-contact/'  -->
                <!-- here we pass <%= i.number %> in variable number in index.js (app.get('delete-contact')) -->

                <!-- 1. this is first part passing as params  -->


                <!-- <a href="/delete-contact/<%=i.number %> " class="btn btn-primary">Delete</a> -->

                <!-- 2. this is second part passing as query -->
                <!-- instead of passing variable in router we pass here -->


                <!-- <a href="/delete-contact/?number=<%=i.number %>  " class="btn btn-primary">Delete</a> -->


                <!-- 3. here we use id cuz we use our database -->
                <a href="/delete-contact/?id=<%=i._id %>  " class="btn btn-primary">Delete</a>

            </div>
        </div>

        <% } %>





            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
                crossorigin="anonymous"></script>
            <script src="js/home.js">

            </script>
</body>

</html>